@page
@model WebApplication1.Pages.ALkohole.EditModel
@{
}



<br />
<h2 class="text-info">Edycja Alkoholu</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Alkohol.ID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Alkohol.Nazwa"></label>
            </div>
            <div class="col-6">
                <input asp-for="Alkohol.Nazwa" class="form-control" />
            </div>
            <span asp-validation-for="Alkohol.Nazwa" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Alkohol.KrajPochodzenia"></label>
            </div>
            <div class="col-6">
                <input asp-for="Alkohol.KrajPochodzenia" class="form-control" />
            </div>
            <span asp-validation-for="Alkohol.KrajPochodzenia" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-3 offset-3">
                <input type="submit" value="Aktualizuj" class="btn btn-primary form-control" />

            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Powrót do listy Alkoholi</a>
            </div>
        </div>
    </form>


</div>