@page
@model WebApplication1.Pages.Klienci.CreateModel
@{
}

<br />
<h2 class="text-info">Dodaj Nowy Alkohol</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.id_klienta"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.id_klienta" class="form-control" />
            </div>
            <span asp-validation-for="Klient.id_klienta" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.Imie"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.Imie" class="form-control" />
            </div>
            <span asp-validation-for="Klient.Imie" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.Nazwisko"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.Nazwisko" class="form-control" />
            </div>
            <span asp-validation-for="Klient.Nazwisko" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.CzyPelnoletni"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.CzyPelnoletni" class="form-control" />
            </div>
            <span asp-validation-for="Klient.CzyPelnoletni" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.Ulub_alkohol"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.Ulub_alkohol" class="form-control" />
            </div>
            <span asp-validation-for="Klient.Ulub_alkohol" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Klient.Ulub_drink"></label>
            </div>
            <div class="col-6">
                <input asp-for="Klient.Ulub_drink" class="form-control" />
            </div>
            <span asp-validation-for="Klient.Ulub_drink" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-3 offset-3">
                <input type="submit" value="Dodaj" class="btn btn-primary form-control" />

            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Powrót do listy Klientow</a>
            </div>
        </div>
    </form>


</div>